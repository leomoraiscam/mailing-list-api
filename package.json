  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start": "node dist/main/server.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register src/main/server.ts",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test-verbose": "jest --passWithNoTests --runInBand",
    "test-unit": "npm test -- -c jest-unit-config.js",
    "test-integration": "npm test -- -c jest-integration-config.js",
    "test-staged": "npm test -- --findRelatedTests",
    "test-ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.4.1",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "mongodb": "^4.3.1",
    "nodemailer": "^6.8.0",
    "winston": "^3.3.3"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "lint-staged": {
    "src/**/*.ts": [
